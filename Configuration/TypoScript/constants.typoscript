# constants.typoscript  (oberhalb der Konstanten, NICHT auskommentieren!)
customcategory=favicons=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:cat.favicons
customsubcategory=favicons/files=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:sub.files
customsubcategory=favicons/app=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:sub.app
customsubcategory=favicons/manifest=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:sub.manifest
customsubcategory=favicons/css=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:sub.css

plugin.tx.alfavicons {

    files {
        # cat=favicons/files/010; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.files.svg
        svg = EXT:al_favicons/Resources/Public/Icons/Favicon.svg

        # cat=favicons/files/020; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.files.ico
        ico = EXT:al_favicons/Resources/Public/Icons/favicon.ico

        # cat=favicons/files/030; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.files.pngLight
        pngLight = EXT:al_favicons/Resources/Public/Icons/favicon-light.png

        # cat=favicons/files/040; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.files.pngDark
        pngDark = EXT:al_favicons/Resources/Public/Icons/favicon-dark.png
    }

    # cat=favicons/app/010; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.appTitle
    appTitle = RONOS IT

    # cat=favicons/app/020; type=color; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.themeColor.meta
    themeColor = #0f172a

    manifest {
        # cat=favicons/manifest/010; type=boolean; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.manifest.enable
        enable = 1

        # cat=favicons/manifest/020; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.manifest.name
        name = RONOS

        # cat=favicons/manifest/030; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.manifest.shortName
        shortName = RONOS

        # cat=favicons/manifest/040; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.manifest.startUrl
        startUrl = /

        # cat=favicons/manifest/050; type=string; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.manifest.scope
        scope = /

        # cat=favicons/manifest/060; type=options[standalone=standalone,fullscreen=fullscreen,minimal-ui=minimal-ui,browser=browser]; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.manifest.display
        display = standalone

        # cat=favicons/manifest/070; type=color; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.manifest.backgroundColor
        backgroundColor = #ffffff

        # cat=favicons/manifest/080; type=color; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.manifest.themeColor
        themeColor = #0f172a
    }
}

# Wenn du spfavicons-Felder auch gruppieren willst, h√§nge sie an favicons/css:
# cat=favicons/css/010; type=boolean; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.css.generateCss
plugin.tx.alfavicons.generateCss = 1
# cat=favicons/css/020; type=boolean; label=LLL:EXT:al_favicons/Resources/Private/Language/locallang_be.xlf:label.css.cssNoCache
plugin.tx.alfavicons.cssNoCache = 0
